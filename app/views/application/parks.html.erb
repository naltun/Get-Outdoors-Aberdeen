<form>
  <input type="text" id="search">
</form>

<table id="table" class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Opening Time</th>
      <th>Closing Time<th>
      <th>Address</th>
      <th>Bus Routes</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% Park.all.each do |p| %>  
      <tr>
        <td><%= p.name %></td>
        <td><%= p.openTime %></td>
        <td><%= p.closeTime %></td>
        <td><%= p.address %></td>
        <td><%= p.busRoutes %></td>
        <td><%= p.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
        $( document ).ready(function() {
          $('input#search').quicksearch('#table tbody tr';
        });
</script>
