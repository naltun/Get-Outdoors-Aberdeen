<div id="main-container" class="container">
  <div class="row">
    <div class="col-xs-3">
      <h4>What's out there, I wonder..!</h4>
    </div>
    <div class="col-xs-9">
      <p>Hello, World!</p>
      <table class="table">
        <tr>
          <td>E</td>
          <td>X</td>
          <td>G</td>
        </tr>
      </table>
      <hr />
    </div>
  </div>
  <div class="row">
    <div id="myCarousel" class="carousel slide">
      <div class="carousel-inner">
        <% @parks.each_with_index do |p, i| %>
          <% if i == 0 %>
            <div class="active item">
          <% else %>
            <div class="item">
          <% end %>
              <div class="row">  
                <div class="col-md-2"></div>
                <div class="col-md-8">
                  <div class="row">
                    <div class="col-md-4">
                      <%= image_tag(p.image_url, class: "park-image" ) %>
                      <p><%= p.image_attribution %></p>
                    </div>
                    <div class="col-md-8">
                      <h3 class="park-name"><%= p.name %></h3>
                      <p><%= p.description %></p>
                    </div>
                  </div>
                </div>
                <div class="col-md-2"></div>
              </div>
            </div>
        <% end %>
      </div>
      <a class="carousel-control left" href="#myCarousel" data-slide="prev"></a>
      <a class="carousel-control right" href="#myCarousel" data-slide="next"></a>  
    </div>
  </div>
</div>
